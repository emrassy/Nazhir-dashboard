generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String
  role          String    @default("user")

  @@map("users")
}

model Santri {
  id        String   @id @default(cuid())
  name      String
  kelas     String
  createdAt DateTime @default(now())

  // ‚ùå Dihapus: hafalan Hafalan[] @relation("SantriToHafalan")
}

model Hafalan {
  id          String   @id @default(uuid())
  namaSantri  String
  tanggal     DateTime
  surat       String
  ayat        String
  catatan     String?
  createdAt   DateTime @default(now())
}

model Absensi {
  id         Int      @id @default(autoincrement())
  namaSantri String
  tanggal    DateTime
  status     String
  catatan    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("absensi")
}
